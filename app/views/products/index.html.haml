%h1#products_heading
  Products

%p.shop_link
  - @products.each do |product|
    %div#single_product
      %div.img_small
        %img(src="#{product.img_url}")
      = link_to product.title, product_path(product)
      %div#product_quantity
        Quantity In Stock:
        = product.quantity

%p#add_new_product
  = link_to 'Add New Product', new_product_path


