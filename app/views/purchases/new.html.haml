.row
  .col-sm-4.col-lg-4.col-md-4
    .thumbnail
      - if session[:purchase]
        - total = 0
        - session[:purchase].each_pair do |key, value|
          - item = Product.find(key)
          - subtotal = item.price.to_f * value.to_f
          - total += subtotal
          %img.product_img{src: "#{item.img_url}"}
          .caption
            %h4.pull-right
              = number_to_currency(item.price)
            %h4
              = link_to item.title, product_path(key)
            %p
              = "#{item.description[0..30]}..."
            %p
              = "Quantity: #{value}"
              %br
              = "Subtotal: #{number_to_currency(subtotal)}"
%h3
  = "Total: #{number_to_currency(total)}"

  = button_to "Checkout", new_purchase_path
