%div.form-style
  = form_for @user do |f|

    .form-group
      = f.label :email
      #exampleInputEmail1
        = f.email_field :email
    .form-group
      = f.label :name
      #exampleInputEmail1
        = f.text_field :name
    .form-group
      = f.label :password
      #exampleInputEmail1
        = f.password_field :password

    %button.btn.btn-default
      = f.submit

